[simulation]
title           = <string>
runtime         = <float>

[domain]
sph_rabsorb     = <float: > r_min>
absorb_coeff    = <float: -infinity < ... < infinity, != 0>
qsph_r0         = <float: -infinity < ... < r_min>
qsph_h          = <float: -1 < ... < 1>
resolution      = <array of int of size 1, 2 or 3>
extent          = <array of float of size 2, 4 or 6>, ex. [x1min, x1max, x2min, x2max, x3min, x3max]
boundaries      = <array of strings of size 1, 2 or 3: { "PERIODIC" | "ABSORB" | "OPEN" | "USER" }>

[algorithm]
CFL             = <float: 0.0 < ... < 1.0>
correction      = <float: ~1>
fieldsolver_ON  = <bool>
deposit_ON      = <bool>
current_filters = <int>

[units]
ppc0            = <float>
larmor0         = <float>
skindepth0      = <float>

[particles]
n_species       = <int>
shuffle_step    = <int>
max_dead_frac   = <float>

[species_<INT>]
label           = <string>
mass            = <float>
charge          = <float>
maxnpart        = <int>
pusher          = <string: { "Boris" | "Photon" | "None" }>

[problem]
...

[visualization]
fields          = <array of strings, ex. ["Ei", "Bi", "Rho", "T0i", ...], see wiki>
fields_stride   = <int>

[output]
fields          = <array of strings, ex. ["Ei", "Bi", "Rho", "T0i", ...], see wiki>
format          = <string: { "disabled", "hdf5" }>
mom_smooth      = <int>
interval        = <int>
