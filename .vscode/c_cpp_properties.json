{
  "env": {
    "myDefaultIncludePath": [
      "${workspaceFolder}/**",
      "${workspaceFolder}/../kokkos/install/include",
      "${workspaceFolder}/../ADIOS2/install/include"
    ],
    "myDefaultDefines": [
      // "PIC_ENGINE",
      "GRPIC_ENGINE",
      "SINGLE_PRECISION",
      "OMPENABLED",
      "OUTPUT_ENABLED",
      // "MINKOWSKI_METRIC",
      // "QSPHERICAL_METRIC",
      "KERR_SCHILD_METRIC"
    ]
  },
  "configurations": [
    {
      "name": "stellar",
      "intelliSenseMode": "linux-gcc-x64",
      "includePath": [
        "${myDefaultIncludePath}"
      ],
      "defines": [
        "${myDefaultDefines}"
      ],
      "cStandard": "c17",
      "cppStandard": "c++17",
    },
    {
      "name": "wsl",
      "intelliSenseMode": "linux-gcc-x64",
      "includePath": [
        "${myDefaultIncludePath}",
        "/usr/local/cuda/include/"
      ],
      "defines": [
        "${myDefaultDefines}"
      ],
      "compilerPath": "/usr/bin/g++",
      "cStandard": "c17",
      "cppStandard": "c++17",
    },
    {
      "name": "mac",
      "intelliSenseMode": "macos-gcc-x64",
      "includePath": [
        "${myDefaultIncludePath}"
      ],
      "defines": [
        "${myDefaultDefines}"
      ],
      "compilerPath": "/usr/local/bin/g++-10",
      "cStandard": "c17",
      "cppStandard": "c++17",
    }
  ],
  "version": 4
}