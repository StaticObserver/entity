{
  "env": {
    "myDefaultIncludePath": [
      "${workspaceFolder}",
      "${workspaceFolder}/src/**",
      "${workspaceFolder}/build/src/",
      "${workspaceFolder}/extern/**",
      "${workspaceFolder}/build/extern/kokkos/",
      "${workspaceFolder}/build/extern/adios2/source/"
    ],
    "myCompilerPath": "g++"
  },
  "configurations": [
    {
      "name": "default",
      "intelliSenseMode": "linux-gcc-x64",
      "includePath": [
        "${myDefaultIncludePath}"
      ],
      "defines": [
        "PIC_ENGINE",
        "SINGLE_PRECISION",
        "OMPENABLED",
        "OUTPUT_ENABLED",
        // "MINKOWSKI_METRIC",
        "QSPHERICAL_METRIC",
        "NTTINY_ENABLED"
      ],
      "compilerPath": "${myCompilerPath}",
      "cStandard": "c17",
      "cppStandard": "c++17",
      "forcedInclude": [
        "${workspaceFolder}/.vscode/intellisense.h"
      ],
      "browse": {
        "path": [
          "${workspaceFolder}"
        ],
        "limitSymbolsToIncludedHeaders": true,
        "databaseFilename": ""
      },
      "configurationProvider": "ms-vscode.cmake-tools"
    }
  ],
  "version": 4
}