{
  "env": {
    "myDefaultIncludePath": [
      "${workspaceFolder}/**",
      "${workspaceFolder}/src/**",
      "${workspaceFolder}/src/framework/**",
      "${workspaceFolder}/src/framework/",
      "${workspaceFolder}/extern/**",
      "${workspaceFolder}/../kokkos/install/include",
      "${workspaceFolder}/../ADIOS2/install/include"
    ],
    "myDefaultDefines": [
      // "PIC_ENGINE",
      "GRPIC_ENGINE",
      "OMPENABLED",
      "OUTPUT_ENABLED",
      // "SIMULATION_METRIC=\"kerr_schild\"",
      // "METRIC_HEADER=\"metrics/kerr_schild.h\"",
      "SIMULATION_METRIC=\"minkowski\"",
      "METRIC_HEADER=\"metrics/minkowski.h\"",
      "HostExeSpace=Kokkos::OpenMP",
      "HostMemSpace=Kokkos::HostSpace"
    ]
  },
  "configurations": [
    {
      "name": "stellar",
      "intelliSenseMode": "linux-gcc-x64",
      "includePath": [
        "${myDefaultIncludePath}"
      ],
      "defines": [
        "${myDefaultDefines}",
        "AccelExeSpace=Kokkos::Cuda",
        "AccelMemSpace=Kokkos::CudaSpace",
      ],
      "cStandard": "c17",
      "cppStandard": "c++17",
    },
    {
      "name": "wsl",
      "intelliSenseMode": "linux-gcc-x64",
      "includePath": [
        "${myDefaultIncludePath}",
        "/usr/local/cuda/include/"
      ],
      "defines": [
        "${myDefaultDefines}",
        "AccelExeSpace=Kokkos::Cuda",
        "AccelMemSpace=Kokkos::CudaSpace",
      ],
      "compilerPath": "/usr/bin/g++",
      "cStandard": "c17",
      "cppStandard": "c++17",
    },
    {
      "name": "mac",
      "intelliSenseMode": "macos-gcc-x64",
      "includePath": [
        "${myDefaultIncludePath}"
      ],
      "defines": [
        "${myDefaultDefines}",
        "AccelExeSpace=Kokkos::OpenMP",
        "AccelMemSpace=Kokkos::HostSpace"
      ],
      "compilerPath": "/usr/local/bin/g++-10",
      "cStandard": "c17",
      "cppStandard": "c++17",
    }
  ],
  "version": 4
}